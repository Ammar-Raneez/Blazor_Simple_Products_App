@if (this.product != null)
{
    <tr>
        <td>
            <NavLink href="@($"product/{product.Id}")">
            @product.Name
            </NavLink>            
        </td>
        <td>@product.Brand</td>
        <td style="text-align: right;">@product.Price.ToString()</td>
    </tr>
}

@code {
    [Parameter]
    public Product product { get; set; }
}
